@model Product
<div class="card border-8 mt-4">
    <div class="card-header bg-primary mt-8 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <div class="form-floating col-12">
                    <input disabled asp-for="Title" class="form-control border-0" />
                    <label asp-for="Title" class="ms-2 text-dark"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input disabled asp-for="Description" class="form-control border-0" />
                    <label asp-for="Description" class="ms-2 text-dark"></label>
                </div><div class="form-floating py-1 col-12">
                    <input disabled asp-for="Author" class="form-control border-0" />
                    <label asp-for="Author" class="ms-2 text-dark"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input disabled asp-for="ISBN" class="form-control border-0" />
                    <label asp-for="ISBN" class="ms-2 text-dark"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input disabled asp-for="ListPrice" class="form-control border-0" />
                    <label asp-for="ListPrice" class="ms-2 text-dark"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input disabled asp-for="Price" class="form-control border-0" />
                    <label asp-for="Price" class="ms-2 text-dark"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input disabled asp-for="Price50" class="form-control border-0" />
                    <label asp-for="Price50" class="ms-2 text-dark"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input disabled asp-for="Price100" class="form-control border-0" />
                    <label asp-for="Price100" class="ms-2 text-dark"></label>
                </div>
                <div class="row pt-2">
                    <div class="col-5 col-md-3">
                        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
                    </div>
                    <div class="col-5 col-md-3">
                        <a asp-controller="Product" asp-action="ViewProduct" class="btn btn-dark" style="width:150px">Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>