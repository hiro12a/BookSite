@model IEnumerable<Category>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-square"></i> Create</a>
        </div>
    </div>
</div>
<table id="tblData" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Display Order
            </th>
            <th></th>
        </tr>
    </thead>
</table>

@section Scripts{
    <script src="~/js/category.js"></script>
}